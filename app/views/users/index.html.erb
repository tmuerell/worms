<% title 'Benutzer' %>

<table class="index_table">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Rolle</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle 'odd','even' %>">
    <td><%= link_to user.id, user %></td>
    <td><%= user.name %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% action_item( link_to "Neuer Benutzer", new_user_path ) %>
