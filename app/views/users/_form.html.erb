<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :nickname %>
    <%= f.input :worm_team_name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, :as => :select, :collection => User::ROLES %>
  <% end %>
  <%= f.buttons %>
<% end %>
