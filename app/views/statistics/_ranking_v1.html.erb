
<div class="panel" id="ranking">
  <h3><%= @league.name %></h3>
  <div class="panel_contents">

<table cellspacing="0" cellpadding="0" border="0">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Pl.</th>
      <th>Name</th>
      <th>Spiele</th>
      <th>Punkte</th>
      <th>Koeffizient</th>
      <th>Siege</th>
      <th>Unentschieden</th>
      <th>Niederlagen</th>
    </tr>
  </thead>
  <tbody>
    <% for r in @league.rankings %>
    <tr class="odd">
      <td><%= show_trend(r) %></td>
      <td><%= r.place %>.</td>
      <td><%= r.user.firstname %></td>
      <td><%= r.matches %></td>
      <td><%= r.points %></td>
      <td><%= "%.4f" % r.coefficient %></td>
      <td><%= r.wins %></td>
      <td><%= r.draws %></td>
      <td><%= r.losses %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
